{
  "name": "spicetify-redesign",
  "version": "1.0.0",
  "description": "A Spicetify extension that provides a floating CSS editor with syntax highlighting, live preview, advanced editing features, and enhanced color picker with OKLCH support",
  "author": "kalashnikxvxiii",
  "repository": {
    "type": "git",
    "url": "https://github.com/kalashnikxvxiii/spicetify-redesign"
  },
  "keywords": [
    "spicetify",
    "spotify",
    "css",
    "editor",
    "customization",
    "theme",
    "color-picker",
    "oklch",
    "accessibility",
    "wcag"
  ],
  "scripts": {
    "build": "node scripts/build.mjs",
    "watch": "node scripts/build.mjs --watch",
    "test": "node scripts/test.js",
    "deploy": "node scripts/deploy.js",
    "deploy:quick": "npm run build && node scripts/deploy.js --skip-tests",
    "verify": "node scripts/verify.js",
    "pretest": "echo Running pre-test checks...",
    "postbuild": "node scripts/verify.js",
    "postdeploy": "echo Deployment complete! Restart Spotify to see changes."
  },
  "license": "MIT",
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "esbuild": "^0.27.2",
    "spicetify-creator": "^1.0.4"
  },
  "dependencies": {
    "@types/is-hotkey": "^0.1.7",
    "@types/react-rnd": "^8.0.0",
    "ace-builds": "^1.4.14",
    "is-hotkey": "^0.2.0",
    "react": "^17.0.2",
    "react-ace": "^9.5.0",
    "react-rnd": "^10.3.5",
    "spcr-settings": "^1.1.0"
  }
}
